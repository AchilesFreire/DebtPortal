@model DebtPortal.ViewModels.AddressViewModel


@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DebtCollectionPortal - Update Address</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #f8f9fa;
        }

        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        .sidebar {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: white;
        }

            .sidebar .nav-link {
                color: rgba(255, 255, 255, 0.8);
                padding: 12px 20px;
                border-radius: 10px;
                margin: 5px 0;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background: rgba(255, 255, 255, 0.2);
                    color: white;
                }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        }

        .btn-primary {
            background: linear-gradient(45deg, #667eea, #764ba2);
            border: none;
            border-radius: 10px;
        }

        .btn-outline-primary {
            border-color: #667eea;
            color: #667eea;
            border-radius: 10px;
        }

            .btn-outline-primary:hover {
                background: #667eea;
                border-color: #667eea;
            }

        .form-control {
            border-radius: 10px;
            border: 2px solid #e9ecef;
            padding: 12px 15px;
        }

            .form-control:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
            }

        .current-address {
            background: #f8f9fa;
            border-radius: 10px;
            padding: 20px;
            border-left: 4px solid #667eea;
        }
    </style>
    </head>
    <body>
    <form asp-action="UpdateAddress" method="post">
        <div class="container-fluid">
            <div class="row">
                <!-- Sidebar -->
                <div class="col-md-3 col-lg-2 px-0">
                    <div class="sidebar">
                        <div class="p-3">
                            <h4 class="text-center mb-4">
                                <i class="fas fa-shield-alt me-2"></i>
                                DebtCollectionPortal
                            </h4>
                            <nav class="nav flex-column">
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="DashBoard">
                                    <i class="fas fa-home me-2"></i>Dashboard
                                </a>
                                <a class="nav-link active" asp-area="" asp-controller="Account" asp-action="UpdateAddress">
                                    <i class="fas fa-map-marker-alt me-2"></i>Update Address
                                </a>
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="UpdateEmail">
                                    <i class="fas fa-envelope me-2"></i>Update Email
                                </a>
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                                </a>
                            </nav>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="col-md-9 col-lg-10">
                    <div class="p-4">
                        <!-- Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <h2 class="mb-1">
                                    <i class="fas fa-map-marker-alt me-2"></i>Update Address
                                </h2>
                                <p class="text-muted mb-0">Update your current address information</p>
                            </div>
                            <a asp-area="" asp-controller="Account" asp-action="DashBoard" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                            </a>
                        </div>

                        <div class="row">
                            <div class="col-lg-8">
                                <!-- Current Address -->
                                <div class="card mb-4">
                                    <div class="card-header bg-info text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-home me-2"></i>Current Address
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="current-address">
                                            <h6 class="fw-bold mb-3">John Michael Doe</h6>
                                            <p class="mb-1">@Model.AddressLine1</p>
                                            <p class="mb-1">@Model.AddressLine1</p>
                                            <p class="mb-1">@Model.City , @Model.PostCode</p>
                                            <p class="mb-0">@Model.Country</p>
                                        </div>
                                    </div>
                                    <div asp-validation-summary="All" class="text-danger mb-2"></div>
                                </div>

                                <!-- Update Form -->
                                <div class="card">
                                    <div class="card-header bg-primary text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-edit me-2"></i>New Address Information
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-md-8 mb-3">
                                                <label asp-for="AddressLine1" class=" form-label">Address Line 1 *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                                    <input type="text" asp-for="AddressLine1" class="form-control" id="addressLine1" name="addressLine1"
                                                            required>
                                                </div>
                                            </div>

                                            <div class="col-md-4 mb-3">
                                                <label asp-for="AddressLine2" class=" form-label">Address Line 2</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-building"></i></span>
                                                    <input type="text" asp-for="AddressLine2" class="form-control" id="addressLine2" name="addressLine2"
                                                            >
                                                </div>
                                                <div class="form-text">Optional</div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="col-md-6 mb-3">
                                                <label asp-for="City" class="form-label">City *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-city"></i></span>
                                                    <input type="text" asp-for="City" class="form-control" id="city" name="city"
                                                            required>
                                                </div>
                                            </div>

                                            <div class="col-md-3 mb-3">
                                                <label asp-for="PostCode" class="form-label">Postcode *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-mail-bulk"></i></span>
                                                    <input type="text" asp-for="PostCode" class="form-control" id="postcode" name="postcode"
                                                            required>
                                                </div>
                                            </div>

                                            <div class="col-md-3 mb-3">
                                                <label asp-for="Country" class="form-label">Country *</label>
                                                <div class="input-group">
                                                    <span class="input-group-text"><i class="fas fa-flag"></i></span>
                                                    <select asp-for="Country" class="form-control" id="country" name="country" required>
                                                        <option value="United Kingdom" selected>United Kingdom</option>
                                                        <option value="England">England</option>
                                                        <option value="Scotland">Scotland</option>
                                                        <option value="Wales">Wales</option>
                                                        <option value="Northern Ireland">Northern Ireland</option>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mb-4">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="confirmAddress" required>
                                                <label class="form-check-label" for="confirmAddress">
                                                    I confirm that the above address information is accurate and up-to-date
                                                </label>
                                            </div>
                                        </div>

                                        <div class="d-flex gap-2">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-save me-2"></i>Update Address
                                            </button>
                                            <button type="button" class="btn btn-outline-secondary" onclick="resetForm()">
                                                <i class="fas fa-undo me-2"></i>Reset
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-lg-4">
                                <!-- Information Card -->
                                <div class="card">
                                    <div class="card-header bg-warning text-dark">
                                        <h5 class="mb-0">
                                            <i class="fas fa-info-circle me-2"></i>Important Information
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-unstyled mb-0">
                                            <li class="mb-2">
                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                Address updates are processed immediately
                                            </li>
                                            <li class="mb-2">
                                                <i class="fas fa-check-circle text-success me-2"></i>
                                                You'll receive confirmation via email
                                            </li>
                                            <li class="mb-2">
                                                <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                                                Ensure all fields are accurate
                                            </li>
                                            <li class="mb-0">
                                                <i class="fas fa-shield-alt text-info me-2"></i>
                                                Your data is secure and encrypted
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <!-- API Information -->
                                <div class="card mt-3">
                                    <div class="card-header bg-dark text-white">
                                        <h5 class="mb-0">
                                            <i class="fas fa-code me-2"></i>API Information
                                        </h5>
                                    </div>
                                    <div class="card-body">
                                        <small class="text-muted">
                                            <strong>Endpoint:</strong><br>
                                            PUT /api/account/{accountId}/address<br><br>
                                            <strong>Required Fields:</strong><br>
                                            • addressLine1<br>
                                            • city<br>
                                            • postcode<br>
                                            • country<br><br>
                                            <strong>Optional Fields:</strong><br>
                                            • addressLine2
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script>

            function resetForm() {
                document.getElementById('addressForm').reset();
                document.getElementById('addressLine1').value = '123 Main Street';
                document.getElementById('addressLine2').value = 'Apartment 4B';
                document.getElementById('city').value = 'London';
                document.getElementById('postcode').value = 'SW1A 1AA';
                document.getElementById('country').value = 'United Kingdom';
            }
        </script>
    </body>
   

