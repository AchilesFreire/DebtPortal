@model DebtPortal.ViewModels.AddressViewModel


@{
    var successMessage = TempData["SuccessMessage"] as string;
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<form asp-action="UpdateAddress" method="post">

<div class="row g-3">
    <div class="col-12 col-lg-6 mb-3">
        <div class="default-card">
            <div class="card shadow-sm">
                <div class="card-header">
                    Update Address
                </div>
                <div class="card-body">
                        <div asp-validation-summary="All" class="text-danger mb-2"></div>

                    <div class="row g-2">
                        <label asp-for="AddressLine1">AddressLine1</label>
                        <input asp-for="AddressLine1" class="form-control" />
                    </div>
                    <div class="row g-2">
                        <label asp-for="AddressLine2">AddressLine2</label>
                        <input asp-for="AddressLine2" class="form-control" />
                    </div>
                    <div class="row g-2">
                        <label asp-for="City">City</label>
                        <input asp-for="City" class="form-control" />
                    </div>
                    <div class="row g-2">
                        <label asp-for="PostCode">PostCode</label>
                        <input asp-for="PostCode" class="form-control" />
                    </div>
                    <div class="row g-2">
                        <label asp-for="Country">Country</label>
                        <input asp-for="Country" class="form-control" />
                    </div>
                    </div>
                    <div class="card-footer">
                        <div class="row g-2">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    
</form>
