
@model DebtPortal.ViewModels.AccountInfoViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<form asp-action="Login" method="post">
    <div class="mb-4">
        <div class="row g-3">
            <div class="col-12 col-md-6">
                <label class="form-label">Id</label>
                <input asp-for="Id" readonly class="form-control form-control-sm" />
            </div>
            <div class="col-12 col-md-6">
                <label class="form-label">AccountId</label>
                <input asp-for="AccountId" readonly class="form-control form-control-sm" />
            </div>
        </div>
    </div>

    <div class="row g-3">
        <!-- Card 1: Debtor Info -->
        <div class="col-12 col-lg-6 mb-3">
            <div class="debtor-card">
                <div class="card shadow-sm">
                    <div class="card-header">
                        Debtor Info
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="field-label">Nome</label>
                                <input asp-for="DebtorInfo.FirstName" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Sobrenome</label>
                                <input asp-for="DebtorInfo.LastName" readonly class="form-control form-control-sm" />
                            </div>

                            <div class="col-6">
                                <label class="field-label">Data de Nascimento</label>
                                <input asp-for="DebtorInfo.DateOfBirth" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Email</label>
                                <input asp-for="DebtorInfo.Email" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Telefone</label>
                                <input asp-for="DebtorInfo.Phone" readonly class="form-control form-control-sm" />
                            </div>

                            <div class="col-12">
                                <div class="address-header">Address</div>
                                <div class="row g-2">
                                    <div class="col-12 col-sm-6">
                                        <label class="field-label">Line 1</label>
                                        <input asp-for="DebtorInfo.Address.AddressLine1" readonly class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-12 col-sm-6">
                                        <label class="field-label">Line 2</label>
                                        <input asp-for="DebtorInfo.Address.AddressLine2" readonly class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="field-label">City</label>
                                        <input asp-for="DebtorInfo.Address.City" readonly class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-6 col-sm-4">
                                        <label class="field-label">PostCode</label>
                                        <input asp-for="DebtorInfo.Address.PostCode" readonly class="form-control form-control-sm" />
                                    </div>
                                    <div class="col-12 col-sm-4">
                                        <label class="field-label">Country</label>
                                        <input asp-for="DebtorInfo.Address.Country" readonly class="form-control form-control-sm" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2: Debt Info -->
        <div class="col-12 col-lg-6 mb-3">
            <div class="debt-card">
                <div class="card shadow-sm">
                    <div class="card-header">
                        Debt Info
                    </div>
                    <div class="card-body">
                        <div class="row g-2">
                            <div class="col-6">
                                <label class="field-label">Original Creditor</label>
                                <input asp-for="DebtInfo.OriginalCreditor" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Debt Reference</label>
                                <input asp-for="DebtInfo.DebtReference" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Original Balance</label>
                                <input asp-for="DebtInfo.OriginalBalance" readonly class="form-control form-control-sm" />
                            </div>

                            <div class="col-6">
                                <label class="field-label">Current Balance</label>
                                <input asp-for="DebtInfo.CurrentBalance" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Interest Rate</label>
                                <input asp-for="DebtInfo.InterestRate" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Date Incurred</label>
                                <input asp-for="DebtInfo.DateIncurred" readonly class="form-control form-control-sm" />
                            </div>

                            <div class="col-6">
                                <label class="field-label">Last Payment Date</label>
                                <input asp-for="DebtInfo.LastPaymentDate" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Status</label>
                                <input asp-for="DebtInfo.Status" readonly class="form-control form-control-sm" />
                            </div>
                            <div class="col-6">
                                <label class="field-label">Currency</label>
                                <input asp-for="DebtInfo.Currency" readonly class="form-control form-control-sm" />

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>