<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DebtPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DebtPortal.styles.css" asp-append-version="true" />
    <style>
        .card-header
         {
            background-color: lightsteelblue;
            color: #fff;
            font-weight: 600;
        }

        .address-header {
            background-color: #808080;
            color: #fff;
            font-weight: 600;
            padding: .5rem .75rem;
            border-radius: .25rem;
            margin-bottom: .5rem;
        }

        .field-label {
            font-weight: 600;
            color: #444;
            font-size: .9rem;
            margin-bottom: .25rem;
        }

        .default-card .card {
            border-radius: .6rem;
        }

        .form-control-sm {
            font-size: .85rem;
            padding: .3rem .5rem;
            height: calc(1.5rem + 0.6rem);
        }

        .card-body {
            padding: 0.9rem;
        }
    </style>
</head>

<body>
    <header>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
